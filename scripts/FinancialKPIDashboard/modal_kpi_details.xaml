<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KPI Transaction Details" Height="500" Width="800">
    <Grid Margin="10">
        <DataGrid Name="dgTransactions" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                <DataGridTextColumn Header="Account" Binding="{Binding Account}" />
                <DataGridTextColumn Header="Debit" Binding="{Binding Debit}" />
                <DataGridTextColumn Header="Credit" Binding="{Binding Credit}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>