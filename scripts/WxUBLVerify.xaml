<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UBL 2.1 XML Verifikator" 
        Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="UBL 2.1 XML Verifikacija" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#2C3E50"/>

        <!-- XML File Path Section -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="XML Datoteka:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="xmlFilePathTextBox" 
                         Grid.Column="0"
                         FontSize="12"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         ToolTip="Unesite putanju do UBL XML datoteke"/>
                
                <Button Grid.Column="2"
                        Content="Pretraži..."
                        FontSize="12"
                        Padding="10,5"
                        Click="OnBrowseButtonClick"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Schemas Path Section -->
        <StackPanel Grid.Row="4" Orientation="Vertical">
            <TextBlock Text="Putanja do Schema direktorija (opcionalno):" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="schemasPathTextBox" 
                         Grid.Column="0"
                         FontSize="12"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         ToolTip="Opcionalno: Unesite putanju do direktorija sa XSD i Schematron shemama"/>
                
                <Button Grid.Column="2"
                        Content="Pretraži..."
                        FontSize="12"
                        Padding="10,5"
                        Click="OnBrowseSchemasButtonClick"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#95A5A6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <TextBlock Text="Ako nije navedeno, koristit će se postavke iz baze podataka ili uobičajene lokacije." 
                       FontSize="10" 
                       FontStyle="Italic"
                       Foreground="#7F8C8D"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Verify Button -->
        <Button Grid.Row="6"
                Content="VERIFIKUJ XML"
                FontSize="16"
                FontWeight="Bold"
                Height="50"
                Click="OnVerifyButtonClick"
                Background="#27AE60"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#27AE60"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#229954"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Status Area -->
        <Border Grid.Row="8" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                Background="#ECF0F1"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="statusTextBlock" 
                           Text="Spremno za verifikaciju. Unesite putanju do XML datoteke i kliknite 'VERIFIKUJ XML'."
                           FontSize="12"
                           TextWrapping="Wrap"
                           Foreground="#2C3E50"/>
            </ScrollViewer>
        </Border>

        <!-- Info Footer -->
        <TextBlock Grid.Row="9"
                   Text="Ovaj alat provjerava UBL 2.1 XML datoteke prema XSD shemama i Schematron pravilima."
                   FontSize="10"
                   FontStyle="Italic"
                   Foreground="#7F8C8D"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
