<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfCSCS"
    xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
    mc:Ignorable="d"
    Title="NumericBox" Height="300" Width="500">
    <Grid>
        <TextBox Margin="50,20,0,0"
                 Height="60"  Width="400"
                 DataContext="" Name="tb2"
                 HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <wcl:ASNumericBox
            KeyTraps="F2|numbox1@clicked|F3|nekidrugi"
            ButtonSize="150"
            Size="9" Dec="2"
            MinValue="-1000"
            MaxValue="1000"

            FieldName="variable1"
            Name="numbox1"
            Thousands="True"
            Height="60"  Width="400"
            Margin="50,100,0,0"
            HorizontalAlignment="Left" VerticalAlignment="Top"
            FontSize="25"/>


    </Grid>
</Window>