<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCSCS"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        mc:Ignorable="d"
        Title="Window1" Height="700" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Name="mainGrid" Background="Green">

        <Label Name="label1" Content="Background Colors"
        VerticalAlignment="Top" HorizontalAlignment="Left" 
		Margin="10,70,0,0"/>

        <ComboBox Name="comboBGColors" 
        VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="10,100,0,0">
        </ComboBox>


		<Label Name="label2" Content="Foreground Colors"
        VerticalAlignment="Top" HorizontalAlignment="Left"
		Margin="10,170,0,0"/>
		
		<ComboBox Name="comboFGColors"
        VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="10,200,0,0">
		</ComboBox>

        <Button Name="buttonUpdater" Content="Updater"
                VerticalAlignment="Top" HorizontalAlignment="Left" 
                Width="100" Height="50"
                Margin="10,250,0,0">
        </Button>


        <TextBox Name="textArea" Text="Some text"
                 VerticalAlignment="Top" HorizontalAlignment="Left" 
                 Width="100" Height="50"
                 Margin="10,325,0,0">
        </TextBox>

        <Button Name="buttonQuestion" Content="Question"
                VerticalAlignment="Top" HorizontalAlignment="Left" 
                Width="100" Height="50"
                Margin="10,400,0,0">
        </Button>

        <Label Name="labelAnswer" Content="Answer"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="10,475,0,0"/>


    </Grid>
</Window>