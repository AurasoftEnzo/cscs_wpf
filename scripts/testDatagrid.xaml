<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
	xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"        
    mc:Ignorable="d"
    Title="testDatagrid" Height="640" Width="1100">


    <Grid Margin="0,0,3.8,14.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="900*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
	    <Grid.RowDefinitions>
    	    <RowDefinition Height="100"/>
		    <RowDefinition Height="100"/>
    	    <RowDefinition Height="40"/>
		    <RowDefinition Height="40"/>
		    <RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
	    </Grid.RowDefinitions>

        <Button Name="fetchdata" Content="Fetch Data" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" DataContext="FetchData" Grid.Column="0" Grid.Row="0"/>

        <DataGrid GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#FFD7D6D6"
                  Margin="5,5,5,5"
                  IsReadOnly="true"
                  x:Name="dgStudents"
                  Height="245"
                  Width="800"
                  RowHeight="22"
                  FontSize="15"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Background="White"
		          Grid.Column="0"
                  Grid.Row="1"		  
                  TabIndex="4" 
                  BorderThickness="0,0,0,0"
				  VerticalAlignment="Top">
			<DataGrid.Resources>
				<!-- reusable base style for headers -->
				<Style x:Key="ColumnHeaderBaseStyle" TargetType="{x:Type DataGridColumnHeader}">
					<Setter Property="Background" Value="#7E909A" />
					<Setter Property="Foreground" Value="White" />
					<Setter Property="FontSize" Value="17"/>
					<Setter Property="BorderBrush" Value="White"/>
					<Setter Property="BorderThickness" Value="1"/>
					<!-- other common setters -->
				</Style>
				
				<!-- style applied to all ColumnHeaders; center only when Content == "Amount" -->
                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource ColumnHeaderBaseStyle}">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Amount">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
			</DataGrid.Resources>
            <DataGrid.Columns>

                <DataGridTemplateColumn Header="ID" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="STUDENTID_AR"
                                    HorizontalContentAlignment="Right"
                                     />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Name" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="STUDENTNAME_AR"
                                             />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Gender" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="STUDENTGENDER_AR"
                                             />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Amount" Width="100">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="STUDENTAMOUNT_AR"
                                    HorizontalContentAlignment="Right"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				
				<DataGridTemplateColumn Header="Finished" Width="100">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="STUDENTFINISHED_AR"
                                    HorizontalContentAlignment="Center"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Datein" Width="100">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="STUDENTDATE_AR"
                                    HorizontalContentAlignment="Center"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Timein" Width="100">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="STUDENTTIME_AR"
                                    HorizontalContentAlignment="Center"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				
            </DataGrid.Columns>
        </DataGrid>

		<Label Name="labelID" Content="ID" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="2"/>
		<Label Name="labelname" Content="Name" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="3"/>
		<Label Name="labelgender" Content="Gender" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="4"/>
		<Label Name="labelamount" Content="Amount" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="5"/>
		<Label Name="labelfinished" Content="Finished" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="6"/>
		<Label Name="labeldate" Content="Date" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="7"/>
		<Label Name="labeltime" Content="Time" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Height="35" Grid.Column="0" Grid.Row="8"/>
		

        
    </Grid>
</Window>
