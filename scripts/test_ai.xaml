<Window x:Class="WpfDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="1200" Height="800">
	<Viewbox Stretch="Uniform" Margin="0,0,10,-7">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Image Source="image.jpg" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Margin="3,-59,-3,59"/>
			<Button Content="Button 1" Grid.Column="0" Grid.Row="1" Margin="0,0,154,0" Grid.RowSpan="3"/>
			<Button Content="Button 2" Grid.Column="0" Grid.Row="1" Margin="100,0,94,0" Grid.RowSpan="3"/>
			<Button Content="Button 3" Grid.Column="0" Grid.Row="1" Margin="200,0,0,0"/>
		</Grid>
	</Viewbox>
</Window>
