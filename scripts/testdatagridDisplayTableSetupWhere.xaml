<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        mc:Ignorable="d"
        Title="testdatagridDisplayTableSetupWhere" Height="520" Width="1400">

    <Grid>
        <DataGrid 
        Name="grid1" 
        HorizontalAlignment="Left" Height="412" Margin="21,13,0,0" VerticalAlignment="Top" Width="1350" AutoGenerateColumns="False">
            <DataGrid.Columns>

                <DataGridTemplateColumn Header="Invoice Number">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Tag="invoiceNumber"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Invoice Line Number">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Tag="invoiceLineNumber"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Product Number">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Tag="productNumber"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Amount">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Tag="amount"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Price">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Tag="price"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Bit Column">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Tag="bitcolumn"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="String Column">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Tag="stringColumn"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Date Column">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASDateEditer Tag="dateColumn" DisplaySize="10"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Time Column">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASTimeEditer Tag="timeColumn" DisplaySize="8"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Edit/Select Mode" Name="btnES" HorizontalAlignment="Left" Margin="1200,440,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Add Row" Name="btnAdd" HorizontalAlignment="Left" Margin="925,440,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Delete Row" Name="btnDel" HorizontalAlignment="Left" Margin="1020,440,0,0" VerticalAlignment="Top" Width="75"/>

		<Label Name="labelinvoiceNumber" Content="invoiceNumber" HorizontalAlignment="Left" Margin="30,435,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelinvoiceLineNumber" Content="invoiceLineNumber" HorizontalAlignment="Left" Margin="160,435,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelproductNumber" Content="productNumber" HorizontalAlignment="Left" Margin="290,435,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelamount" Content="amount" HorizontalAlignment="Left" Margin="420,435,0,0" VerticalAlignment="Top" Width="75" Height="35" />

	</Grid>
</Window>