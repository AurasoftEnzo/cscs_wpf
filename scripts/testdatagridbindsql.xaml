<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCSCS"
        mc:Ignorable="d"
        Title="testdatagridbindsql" Height="350" Width="500">
    <Window.Resources>
        <Style x:Key="MyFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="-2" StrokeThickness="10" Stroke="Red" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <DataGrid Name="Grid1" HorizontalAlignment="Left" Height="225" Margin="30,25,0,0" VerticalAlignment="Top" Width="380"/>
		<Label Name="labelid" Content="ID" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelname" Content="Name" HorizontalAlignment="Left" Margin="50,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelgender" Content="Gender" HorizontalAlignment="Left" Margin="100,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelamount" Content="Amount" HorizontalAlignment="Left" Margin="150,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labelbitcolumn" Content="BitColumn" HorizontalAlignment="Left" Margin="200,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
		<Label Name="labeldate" Content="Date" HorizontalAlignment="Left" Margin="275,250,0,0" VerticalAlignment="Top" Width="100" Height="35" />

	</Grid>
</Window>
