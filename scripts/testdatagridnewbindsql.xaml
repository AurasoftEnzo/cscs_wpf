<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCSCS"
        mc:Ignorable="d"
        Title="testdatagridnewbindsql" Height="350" Width="500">
   
    <Grid>
        <DataGrid Name="grid1" HorizontalAlignment="Left" Height="225" Margin="30,25,0,0" VerticalAlignment="Top" Width="380">
            <DataGrid.Columns>

                <DataGridTemplateColumn Header="head0">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Tag="id2"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="head1">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Tag="name"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="head2" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Tag="gender" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="head3">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Tag="amount"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTemplateColumn Header="head4">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Tag="bitcolumn"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="head5">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  Tag="datein"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Label Name="labelid" Content="ID" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
        <Label Name="labelname" Content="Name" HorizontalAlignment="Left" Margin="50,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
        <Label Name="labelgender" Content="Gender" HorizontalAlignment="Left" Margin="100,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
        <Label Name="labelamount" Content="Amount" HorizontalAlignment="Left" Margin="150,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
        <Label Name="labelbitcolumn" Content="BitColumn" HorizontalAlignment="Left" Margin="200,250,0,0" VerticalAlignment="Top" Width="75" Height="35" />
        <Label Name="labeldatein" Content="Datein" HorizontalAlignment="Left" Margin="270,250,0,0" VerticalAlignment="Top" Width="100" Height="35" />


    </Grid>
</Window>
