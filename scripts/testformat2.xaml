<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"        
        Title="testFormat2"
        Height="400"
        Width="600">
    <Window.Resources />

    <Grid>

   







        <DataGrid GridLinesVisibility="Horizontal"
              HorizontalGridLinesBrush="#FFD7D6D6"
              Margin="23,32,23,14"
              IsReadOnly="true"
              x:Name="dgRacuniLast"
              Height="300"
              Width="540"
              RowHeight="22"
              FontSize="15"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto"
              Background="White"
              Grid.Row="1"
              TabIndex="4" 
	          BorderThickness="0,0,0,0">
                
	        <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background"
                                Value="#7E909A" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="FontSize" Value="17"/>

                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
       	    </DataGrid.Resources>

            <DataGrid.Columns>
                    <DataGridTemplateColumn Header="No."
                                            Width="28">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10CNTRZ_AR"
                                                Editor="edDefault"
                                                EditLength="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Modul"
                                            Width="55">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10MODULZ_AR"
                                                HorizontalContentAlignment="Center"
                                                Editor="edNumeric"
                                                EditLength="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Račun"
                                            Width="69">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10RACUNZ_AR"
                                                HorizontalContentAlignment="Center"
                                                Editor="edNumeric"
                                                EditLength="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Datum"
                                            Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10DATUMZ_AR"
                                                HorizontalContentAlignment="Center"
                                                Editor="edDefault"
                                                EditLength="8" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Sat"
                                            Width="65">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10TIMEZ_AR"
                                                HorizontalContentAlignment="Center"
                                                Editor="edDefault"
                                                EditLength="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Dobavljač"
                                            Width="155">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10NAMEZ_AR"
                                                Editor="edDefault"
                                                Thousands="True"
                                                EditLength="0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Ukupno"
                                            Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <wcl:ASGridCell FieldName="T10IZNOSZ_AR"
                                                Editor="edEditBtn"
                                                EditLength="0"
                                                x:Name="clickTest"
                                                Size="10"
                                                DecimalChrs="2"
                                                HorizontalContentAlignment="Right" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
	</Grid>  
</Window>