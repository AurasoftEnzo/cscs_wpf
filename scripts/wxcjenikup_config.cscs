        //e-mail
        updateNKSYSYCO("EMAIL_SERVER", EMAIL_SERVER);
        updateNKSYSYCO("EMAIL_USERNAME", EMAIL_USERNAME);
        updateNKSYSYCO("EMAIL_PASSWORD", EMAIL_PASSWORD);
        updateNKSYSYCO("EMAIL_SENDR_ADD", EMAIL_SENDR_ADD);
