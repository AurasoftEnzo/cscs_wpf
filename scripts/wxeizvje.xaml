<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        Title="e-Izvješćivanje – Mjesečni izvještaj"
        Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--<StackPanel Orientation="Horizontal" Margin="0,0,0,10">-->
            <Label Content="Mjesec:" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,0,0,10"/>
            <ComboBox x:Name="cmbMonth" Width="100" SelectedIndex="0" HorizontalAlignment="Left" Margin="60,0,0,10" />
            <Label Content="Godina:" FontWeight="Bold" HorizontalAlignment="Left" Margin="170,0,0,10"/>
            <TextBox x:Name="txtYear" Width="80" Text="2020" HorizontalAlignment="Left" Margin="230,0,0,10"/>
        <!--</StackPanel>-->

        <DataGrid x:Name="dgInvoices" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False" CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <!--<DataGridCheckBoxColumn Header="Odaberi" Binding="{Binding Selected}" Width="60"/>
                <DataGridTextColumn Header="Broj računa" Binding="{Binding NKPR_GL_NUM}" Width="120"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding NKPR_GL_INVDTE}" Width="100"/>
                <DataGridTextColumn Header="Kupac" Binding="{Binding NKPR_GL_CUSNME}" Width="*"/>
                <DataGridTextColumn Header="Iznos" Binding="{Binding NKPR_GL_TOTAL}" Width="100"/>-->
			
				<DataGridTemplateColumn Header="Odaberi" Width="60" IsReadOnly="False">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="RACUNODABERI_AR"
                                    HorizontalContentAlignment="Center"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				
				<DataGridTemplateColumn Header="Broj računa" Width="120" IsReadOnly="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="RACUNBROJRACUNA_AR"
                                    HorizontalContentAlignment="Center"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Datum" Width="100">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="RACUNDATUM_AR"
                                    HorizontalContentAlignment="Center"
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Kupac" Width="570">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<wcl:ASGridCell FieldName="RACUNKUPAC_AR"
                                    HorizontalContentAlignment="Left"											
                                     />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Iznos" Width="100">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>							
							<wcl:ASGridCell FieldName="RACUNIZNOS_AR"
                                    HorizontalContentAlignment="Right"												
                                     />							
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        
        <!--<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">-->
		<Button Name="btnTest" Content="Test" Width="130" Height="35" Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,390,0"/>
    		<Button Name="btnPrepare" Content="Učitaj listu" Width="130" Height="35" Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,250,0"/>
            <Button Name="btnSend" Content="Pošalji XML" Width="130" Height="35"  Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,110,0"/>
            <Button Name="btnExit" Content="Izlaz" Width="100" Height="35" Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,0,0"/>
        <!--</StackPanel>-->
    </Grid>
</Window>