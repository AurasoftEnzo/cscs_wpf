<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        xmlns:local="clr-namespace:WpfCSCS"
        mc:Ignorable="d"
        Title="Preuzimanje ulaznih računa"
        Height="670"
        Width="800"
        ResizeMode="CanMinimize">
    <Grid>

        <DataGrid GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#FFD7D6D6"
          Background="White"
          Margin="20,14,0,0"
          IsReadOnly="true"
        RowHeight="22"
          FontSize="15"
          x:Name="datagridListaRacuna"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto"
          TabIndex="4" 
            BorderBrush="DarkGray"
            BorderThickness="1"
         Height="410" Width="745"  VerticalAlignment="Top" HorizontalAlignment="Left"
                  >
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background"
                    Value="#FF006393" />
                    <Setter Property="Foreground"
                    Value="White" />
                    <Setter Property="FontSize" Value="17"/>

                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="R. br."
                                Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayRbr" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Dobavljač"
                                Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDobavljac" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="OIB dobavljača"
                                    Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayOibDobavljaca" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Datum računa"
                                Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDatumRacuna"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Datum PDV-a"
                            Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDatumPDVa"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Broj računa"
                                Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayBrojRacuna"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                

            </DataGrid.Columns>
        </DataGrid>

        <Button
            
            Content="Preuzmi"
                Name="btnPreuzmi"
                FontSize="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="200,439,0,0" Width="385" Height="70" />

        <Label Content="" Name="StatusLabel" FontSize="25" HorizontalContentAlignment="Center" Height="50" Width="570" Margin="110,534,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="" Name="StatusLabel2" FontSize="25" HorizontalContentAlignment="Center" Height="45" Width="570" Margin="110,579,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Image x:Name="asImage" DataContext="Sat" Height="90" Width="100" Margin="680,534,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>