<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        xmlns:local="clr-namespace:WpfCSCS"
        mc:Ignorable="d"
        Title="Preuzimanje ulaznih e-računa"
        Height="670"
        Width="1000"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Name="wxeracungetWindow">
    <Grid>

        <DataGrid GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#FFD7D6D6"
          Background="White"
          Margin="0,14,0,0"
          IsReadOnly="true"
        RowHeight="22"
          FontSize="15"
          x:Name="datagridListaRacuna"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto"
          TabIndex="4" 
            BorderBrush="DarkGray"
            BorderThickness="1"
         Height="410" Width="960"  VerticalAlignment="Top" HorizontalAlignment="Center"
                  >
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background"
                    Value="#FFA72222" />
                    <Setter Property="Foreground"
                    Value="White" />
                    <Setter Property="FontSize" Value="17"/>

                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="R. br."
                                Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayRbr" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Dobavljač"
                                Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDobavljac" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="OIB dobavljača"
                                    Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayOibDobavljaca" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Dat. izdavanja"
                                Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDatumIzdavanja" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Dat. PDV-a"
                            Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDatumPDVa" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Broj računa"
                                Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayBrojRacuna"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>
        </DataGrid>

        

        <Label Content="" Name="StatusLabel" FontSize="25" HorizontalContentAlignment="Center" Height="50" Width="790" Margin="110,534,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="" Name="StatusLabel2" FontSize="25" HorizontalContentAlignment="Center" Height="45" Width="785" Margin="110,579,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Image x:Name="asImage" DataContext="Sat" Height="90" Width="100" Margin="680,534,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <wcl:ASDateEditer
            DisplaySize="8"
            DisplayDate="01/01/26"
            ButtonWidth="19"
            Name="dateEditerFrom"
            DataContext="FilterDateFrom"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="85,439,0,0" Width="130" Height="30" />
        <Label Content="Od:" FontSize="20" HorizontalContentAlignment="Center" Height="35" Width="65" Margin="25,434,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <wcl:ASDateEditer
            DisplaySize="8"
            DisplayDate="01/01/26"
            ButtonWidth="19"
            Name="dateEditerTo"
            DataContext="FilterDateTo"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="85,479,0,0" Width="130" Height="30" />
        <Label Content="Do:" FontSize="20" HorizontalContentAlignment="Center" Height="35" Width="65" Margin="25,474,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button
    
    Content="Prikaži"
        Name="btnPrikazi"
        FontSize="35"
        HorizontalAlignment="Left"
        VerticalAlignment="Top" Margin="270,439,0,0" Width="280" Height="70" />
        
        
        <Button
            
            Content="Preuzmi"
            x:Name="btnPreuzmi"
            FontSize="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="610,439,0,0" Width="355" Height="70" />
    </Grid>
</Window>