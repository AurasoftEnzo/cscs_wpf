<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        Title="eUplate - Izvješæivanje o plaæanjima"
        Height="700"
        Width="1200"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Name="wxweuplateWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="eUplate - Izvješæivanje o zatvorenim raèunima" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,10,0,0">
                <Label Content="Mjesec:" FontSize="16" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbMonth" 
                          Width="150" 
                          Height="30" 
                          FontSize="14" 
                          Margin="5,0,20,0"/>

                <Label Content="Godina:" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="txtYear" 
                         Width="80" 
                         Height="30" 
                         FontSize="14" 
                         Margin="5,0,20,0"/>

                <Button x:Name="btnUcitaj" 
                        Content="Uèitaj plaæanja" 
                        Width="150" 
                        Height="35" 
                        FontSize="14" 
                        Background="#FF4CAF50" 
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid section -->
        <DataGrid Grid.Row="1" 
                  x:Name="dgPayments"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  RowHeight="25"
                  FontSize="13"
                  GridLinesVisibility="All"
                  HorizontalGridLinesBrush="#FFD7D6D6"
                  VerticalGridLinesBrush="#FFD7D6D6"
                  AlternatingRowBackground="#FFF5F5F5"
                  SelectionMode="Extended"
                  BorderBrush="DarkGray"
                  BorderThickness="1">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Odaberi" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayOdaberi"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Rbr" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayRbr"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Partner" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayPartner"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="OIB" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayOIB"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Br. raèuna" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayBrRacuna"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="ID raèuna" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayIDNum"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Vrsta plaæanja" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayVrstaPlacanja"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Iznos raèuna" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayIznosRacuna" HorizontalContentAlignment="Right"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Plaæeni iznos" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayPlaceniIznos" HorizontalContentAlignment="Right"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Godina" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayGodina" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons section -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,0">
            <Button x:Name="btnPosalji" 
                    Content="Pošalji izvještaj" 
                    Width="180" 
                    Height="45" 
                    FontSize="16" 
                    Background="#FFFF9800" 
                    Foreground="White" 
                    Margin="0,0,20,0"/>

            <Button x:Name="btnIzlaz" 
                    Content="Izlaz" 
                    Width="120" 
                    Height="45" 
                    FontSize="16" 
                    Background="#FFF44336" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>