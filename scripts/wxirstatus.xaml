<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wcl="clr-namespace:WpfControlsLibrary;assembly=WpfControlsLibrary"
        xmlns:local="clr-namespace:WpfCSCS"
        mc:Ignorable="d"
        Title="Pregled statusa izlaznih e-računa"
        Height="670"
        Width="1000"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Name="wxirstatusWindow">
    <Grid>

        <DataGrid GridLinesVisibility="All"
          HorizontalGridLinesBrush="#FFD7D6D6"
                  VerticalGridLinesBrush="#FFD7D6D6"
               
          Background="White"
          Margin="0,14,0,0"
          IsReadOnly="true"
        RowHeight="22"
          FontSize="15"
          x:Name="datagridListaRacuna"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto"
          TabIndex="4" 
            BorderBrush="DarkGray"
            BorderThickness="1"
         Height="410" Width="960"  VerticalAlignment="Top" HorizontalAlignment="Center"
                  >
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background"
                    Value="#FF22A69E" />
                    <Setter Property="Foreground"
                    Value="White" />
                    <Setter Property="FontSize" Value="17"/>

                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="R. br."
                                Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayRbr" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Br. računa"
                Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayBrojRacuna"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Status računa"
                    Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayStatusRacuna" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Kupac"
                                Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayKupac" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Dat. izdav."
                                Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDatumIzdavanja" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Dat. knjiž."
                            Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayDatumKnjizenja" HorizontalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="OIB kupca"
                    Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayOibKupca" HorizontalContentAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Fiskaliziran?"
                    Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayStatusFiskalizacije" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--<DataGridTemplateColumn Header="Report payment status"-->
                <DataGridTemplateColumn Header="Status plaćanja"
                    Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayReportPaymentStatus" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="ID računa"
    Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <wcl:ASGridCell FieldName="arrayIdRacunaPosrednika" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>

        <Button
            
            Content="Prikaži"
                Name="btnPrikazi"
                FontSize="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="310,434,0,0" Width="385" Height="70" />

        <Label Content="" Name="StatusLabel" FontSize="25" HorizontalContentAlignment="Center" Height="50" Width="775" Margin="110,534,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="" Name="StatusLabel2" FontSize="25" HorizontalContentAlignment="Center" Height="45" Width="775" Margin="110,579,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Image x:Name="asImage" DataContext="Sat" Height="90" Width="100" Margin="680,534,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <wcl:ASDateEditer
            DisplaySize="8"
            DisplayDate="01/01/26"
            ButtonWidth="19"
            x:Name="dateEditerFrom"
            DataContext="FilterDateFrom"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="70,434,0,0" Width="130" Height="30" />
        <Label Content="Od:" FontSize="20" HorizontalContentAlignment="Center" Height="35" Width="65" Margin="10,429,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <wcl:ASDateEditer
            DisplaySize="8"
            DisplayDate="01/01/26"
            ButtonWidth="19"
            x:Name="dateEditerTo"
            DataContext="FilterDateTo"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="70,474,0,0" Width="130" Height="30" />
        <Label Content="Do:" FontSize="20" HorizontalContentAlignment="Center" Height="35" Width="65" Margin="10,469,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>