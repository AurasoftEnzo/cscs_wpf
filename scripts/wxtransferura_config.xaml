		<Button
            Content="Odaberi"
                Name="btnSelectXMLDirectory"
                FontSize="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
            Margin="670,775,0,0"
            Width="100" Height="40"
            TabIndex="16"/>
		
    </Grid>
</Window>