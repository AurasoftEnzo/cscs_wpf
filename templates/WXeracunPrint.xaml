<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="E-Račun Pregled i Ispis" 
        Height="512" Width="811"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFBDBDBD"/>
                    <Setter Property="Foreground" Value="#FF757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,5,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#FF2196F3"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="47.56"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="E-RAČUN - PREGLED I ISPIS" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- File Selection -->
        <GroupBox Grid.Row="1" Header="1. Odabir XML datoteke e-računa" Margin="10,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Putanja do XML datoteke:"/>

                <TextBox x:Name="txtXmlPath" 
                         Grid.Row="1" 
                         Grid.Column="0"
                         IsReadOnly="False"
                         ToolTip="Unesite putanju do XML e-računa ili pritisnite 'Pretraži...'"/>

                <Button x:Name="btnBrowse" 
                        Grid.Row="1" 
                        Grid.Column="1"
                        Content="📁 Pretraži..."
                        Width="120"
                        ToolTip="Odaberite XML datoteku e-računa"/>
            </Grid>
        </GroupBox>

        <!-- Actions -->
        <GroupBox Grid.Row="2" Header="2. Akcije" Margin="10,2,10,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">

                    <Button x:Name="btnLoad" 
                            Content="📄 Učitaj e-Račun"
                            HorizontalAlignment="Stretch"
                            Height="50"
                            FontSize="14"
                            Margin="5"
                            ToolTip="Učitaj i parsiraj XML e-račun"/>

                    <Separator Margin="5,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" RenderTransformOrigin="0.508,0.066">

                        <Button x:Name="btnExportPDF" 
                                Content="💾 Izvoz u PDF"
                                Width="200"
                                Height="45"
                                ToolTip="Spremi e-račun kao PDF datoteku"/>

                        <Button x:Name="btnPrint" 
                                Content="🖨️ Prikaži / Ispiši"
                                Width="200"
                                Height="45"
                                Margin="5"
                                Background="#FF4CAF50"
                                ToolTip="Prikaži pregled prije ispisa"/>
                    </StackPanel>
                </StackPanel>

                <!-- Preview Area (placeholder for future enhancement) -->
                <Border Grid.Row="1" 
                        BorderBrush="#FFBDBDBD" 
                        BorderThickness="1" 
                        Margin="5"
                        Background="#FFF5F5F5">
                    <TextBlock Text="Pregled e-računa će biti prikazan ovdje nakon učitavanja..."
                               Foreground="#FF757575"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="20"/>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#FF424242" 
                Padding="10"
                Margin="0,10,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Status: " 
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="lblStatus" 
                           Grid.Column="1"
                           Text="Spremno."
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>
            </Grid>
        </Border>

        <!-- Close Button -->
        <Button x:Name="btnClose" 
                Grid.Row="4"
                Content="✖ Zatvori"
                Background="#FFF44336"
                HorizontalAlignment="Right"
                Width="120"
                Margin="0,5,5,0"
                ToolTip="Zatvori prozor"/>
    </Grid>
</Window>